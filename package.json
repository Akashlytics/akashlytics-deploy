{
  "name": "akashlytics-deploy-tool",
  "version": "0.1.0",
  "private": true,
  "description": "Akashlytics deploy tool.",
  "author": {
    "name": "Akashlytics",
    "email": "admin@akashlytics.com",
    "url": "https://www.akashlytics.com/"
  },
  "dependencies": {
    "@cosmjs/proto-signing": "^0.25.4",
    "@cosmjs/stargate": "^0.25.4",
    "@material-ui/core": "^4.11.4",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.58",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "axios": "^0.21.1",
    "clsx": "^1.1.1",
    "date-fns": "^2.22.1",
    "json-stable-stringify": "^1.0.1",
    "jsrsasign": "^10.2.0",
    "nanoid": "^3.1.23",
    "node-fetch": "^2.6.1",
    "notistack": "^1.0.9",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-error-boundary": "^3.1.3",
    "react-hook-form": "^7.8.4",
    "react-monaco-editor": "^0.43.0",
    "react-query": "^3.17.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "web-vitals": "^1.1.2",
    "winston": "^3.3.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "set ELECTRON_START_URL=http://localhost:3000 && electron .",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "pluginOptions": {
    "electronBuilder": {
      "nodeIntegration": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^12.0.7",
    "electron-builder": "^22.11.7",
    "electron-squirrel-startup": "^1.0.0"
  },
  "build": {
    "productName": "Akashlytics Deploy Tool",
    "appId": "akashlytics.deploy",
    "win": {
      "target": "NSIS",
      "icon": "/public/appIcon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "asar": {
      "smartUnpack": true
    },
    "asarUnpack": "**/akashlytics-provider-proxy.exe"
  }
}
